#hero.jumbotron.bg-dark.text-white
  .overlay
    .container
      .row
        .col-md-6
          h1.display-4 Welcome to my portfolio
          p.lead This is where I show my works
        .col-md-6
          form
            h2 Hope to hear from you soon
            .form-group
              label(for='Name') Name:
              input.form-control(placeholder='Name' type='text') 
            .form-group
              label(for='Email') Email:
              input.form-control(placeholder='Email' type='email')
            .form-group
              label(for='message') Message: 
              textarea.form-control(placeholder='message' rows=5)
            button.btn.btn-primary.btn-block Send
